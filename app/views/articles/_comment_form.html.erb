<h3>Post a comment</h3>

<%= render partial: 'shared/errors', locals: { model: @new_comment } %>

<%= form_for [@article, @new_comment] do |f| %>
<p>
  <%= f.label :author, "Your Name" %><br/>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :body, "Your Comment" %><br/>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit "Submit" %>
</p>
<% end %>
